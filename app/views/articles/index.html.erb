<%= render partial: 'loaders' %>
<h3>Here are few articles</h3>

<table>
<tr>
<th>Title</th>
    <th>Text</th>
    <th></th>
</tr>
.<% @articles.each do |item| %>
  <tr>
  <td><%= item.title%></td>
  <td><%= item.text%></td>
  <td><%= link_to 'Show', article_path(item) %></td>
  <td><%= link_to 'Edit', edit_article_path(item) %></td>
  <td><%= link_to 'Destroy', article_path(item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New', new_article_path%>
